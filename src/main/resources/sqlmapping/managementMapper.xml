<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="management" >
	<select id="queryAllBoardRoomSql" resultType="java.util.HashMap">
		SELECT id,address,NAME,state,statetime,endtime,cratename,createdate FROM boardroom
	</select>
	
	<update id="updateBoardroomApplySql" parameterType="java.util.HashMap">
		UPDATE boardroom SET statetime=#{statetime},endtime=#{endtime},state=1,content=#{content} WHERE id=#{id}
	</update>
	
	<update id="updateRoomApplySql" parameterType="java.util.HashMap">
		UPDATE boardroom SET state=0 WHERE id=#{id}
	</update>
	
	<insert id="createRoomSql" parameterType="java.util.HashMap">
		INSERT INTO boardroom (id,address,NAME,state,cratename,createdate) VALUE(#{id},#{address},#{name},0,#{cratename},#{createdate})
	</insert>
	
	<!-- 更新会议室内容 -->
	<update id="updataRoomSql" parameterType="java.util.HashMap">
	 	UPDATE boardroom SET address=#{address},NAME=#{name} WHERE id=#{id}
	</update>
	
	
	<!-- 删除会议室 -->
	<delete id="deleteRoomSql" parameterType="java.util.HashMap">
		DELETE FROM boardroom WHERE id=#{id}
	</delete>
	
	<!-- 根据id查询会议室信息 -->
	<select id="findRoomByIdSql" parameterType="java.util.HashMap" resultType="java.util.HashMap">
		SELECT id,address,NAME,state,cratename,createdate FROM boardroom where id=#{id}
	</select>
</mapper>